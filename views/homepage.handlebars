<div class="container mt-5">
    <div class="row">
        {{#each posts}}
        <div class="col-md-12 mb-4">
            {{#if ../loggedIn}}
            <a href="/comment-post/{{this.id}}" class="card-link">
                {{/if}}
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">{{this.title}}</h5>
                            <h6 class="card-subtitle mb-0 text-muted">Posted by {{this.user.username}} on
                                {{this.formattedDate}}</h6>
                        </div>
                        <hr>
                        <p class="card-text">{{this.postContent}}</p>
                    </div>
                </div>
                {{#if ../loggedIn}}
            </a>
            {{/if}}
        </div>
        {{/each}}
    </div>
</div>

<script src="/js/commentHandling.js"></script>